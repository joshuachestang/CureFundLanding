  </head>
  <body class="enable-animations enable-preloader">
    <%= render 'layouts/alerts_and_errors' %>
    <%= yield %>
  </body>
  <%= javascript_include_tag 'classie.js' %>
  <%= javascript_include_tag 'notificationFx.js' %>
</html>
